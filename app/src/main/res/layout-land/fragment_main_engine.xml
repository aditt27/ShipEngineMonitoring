<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".view.ui.MainActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="@android:color/white">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="355dp">

            <ImageView
                android:id="@+id/main_engine_image_view"
                android:layout_width="681dp"
                android:layout_height="336dp"
                android:adjustViewBounds="true"
                android:scaleType="fitXY"
                android:src="@drawable/main_engine_model"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <ImageView
                android:id="@+id/me_a"
                android:layout_width="12dp"
                android:layout_height="12dp"
                android:layout_marginStart="412dp"
                android:layout_marginTop="92dp"
                android:src="@drawable/circle"
                app:layout_constraintBottom_toTopOf="@+id/main_engine_image_view"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/main_engine_image_view"
                app:layout_constraintVertical_bias="0.802" />

            <ImageView
                android:id="@+id/me_b"
                android:layout_width="12dp"
                android:layout_height="12dp"
                android:layout_marginStart="296dp"
                android:layout_marginTop="92dp"
                android:src="@drawable/circle"
                app:layout_constraintBottom_toTopOf="@+id/main_engine_image_view"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/main_engine_image_view"
                app:layout_constraintVertical_bias="0.775" />

            <ImageView
                android:id="@+id/me_c"
                android:layout_width="12dp"
                android:layout_height="12dp"
                android:layout_marginStart="192dp"
                android:layout_marginTop="92dp"
                android:src="@drawable/circle"
                app:layout_constraintBottom_toTopOf="@+id/main_engine_image_view"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/main_engine_image_view"
                app:layout_constraintVertical_bias="0.868" />

        </androidx.constraintlayout.widget.ConstraintLayout>

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/main_engine_recycler_view"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:clipToPadding="false"
            android:padding="4dp" />

    </LinearLayout>
</ScrollView>