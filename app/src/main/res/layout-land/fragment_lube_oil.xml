<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".view.ui.MainActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="@android:color/white">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="355dp">

            <ImageView
                android:id="@+id/lube_oil_image_view"
                android:layout_width="681dp"
                android:layout_height="336dp"
                android:adjustViewBounds="true"
                android:scaleType="fitXY"
                android:src="@drawable/lubricating_oil_model"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <ImageView
                android:id="@+id/lo_b"
                android:layout_width="12dp"
                android:layout_height="12dp"
                android:layout_marginStart="316dp"
                android:layout_marginTop="94dp"
                android:src="@drawable/circle"
                android:visibility="invisible"
                app:layout_constraintBottom_toTopOf="@+id/lube_oil_image_view"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/lube_oil_image_view"
                app:layout_constraintVertical_bias="0.497" />

            <ImageView
                android:id="@+id/lo_c"
                android:layout_width="12dp"
                android:layout_height="12dp"
                android:layout_marginStart="384dp"
                android:layout_marginTop="92dp"
                android:src="@drawable/circle"
                android:visibility="invisible"
                app:layout_constraintBottom_toTopOf="@+id/lube_oil_image_view"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/lube_oil_image_view"
                app:layout_constraintVertical_bias="0.684" />

            <ImageView
                android:id="@+id/lo_d"
                android:layout_width="12dp"
                android:layout_height="12dp"
                android:layout_marginStart="208dp"
                android:layout_marginTop="92dp"
                android:src="@drawable/circle"
                android:visibility="invisible"
                app:layout_constraintBottom_toTopOf="@+id/lube_oil_image_view"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/lube_oil_image_view"
                app:layout_constraintVertical_bias="0.734" />

            <ImageView
                android:id="@+id/lo_e"
                android:layout_width="12dp"
                android:layout_height="12dp"
                android:layout_marginStart="196dp"
                android:layout_marginTop="92dp"
                android:src="@drawable/circle"
                android:visibility="invisible"
                app:layout_constraintBottom_toTopOf="@+id/lube_oil_image_view"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/lube_oil_image_view"
                app:layout_constraintVertical_bias="0.54" />

            <ImageView
                android:id="@+id/lo_f"
                android:layout_width="12dp"
                android:layout_height="12dp"
                android:layout_marginStart="316dp"
                android:layout_marginTop="92dp"
                android:src="@drawable/circle"
                android:visibility="invisible"
                app:layout_constraintBottom_toTopOf="@+id/lube_oil_image_view"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/lube_oil_image_view"
                app:layout_constraintVertical_bias="0.368" />

        </androidx.constraintlayout.widget.ConstraintLayout>

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/lube_oil_recycler_view"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:clipToPadding="false"
            android:padding="4dp" />

    </LinearLayout>
</ScrollView>