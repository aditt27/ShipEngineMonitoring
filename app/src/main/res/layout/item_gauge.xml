<?xml version="1.0" encoding="utf-8"?>

<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:maxHeight="40dp"
    app:cardCornerRadius="2dp"
    app:cardElevation="8dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/gauge_categories"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:padding="2dp"
            android:text="Kategori"
            app:autoSizeTextType="uniform" />

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@android:color/black"/>

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/gauge_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="Judul"
            android:padding="2dp"
            android:textStyle="bold"
            app:autoSizeTextType="uniform" />

       <com.github.anastr.speedviewlib.SpeedView
           android:id="@+id/gauge"
           android:layout_width="match_parent"
           android:layout_height="wrap_content"
           android:layout_margin="4dp"
           app:sv_indicator="LineIndicator"
           app:sv_indicatorWidth="3dp"
           app:sv_textSize="12sp"
           app:sv_speedometerWidth="22dp"
           app:sv_tickPadding="22dp"
           app:sv_speedTextSize="12sp"
           app:sv_unit="Â°C"
           app:sv_unitTextSize="12sp"
           app:sv_withTremble="false"
           app:sv_speedTextPadding="0dp"
           android:paddingBottom="4dp"/>

    </LinearLayout>

</androidx.cardview.widget.CardView>