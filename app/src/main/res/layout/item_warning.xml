<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    android:id="@+id/item_warning"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingBottom="8dp">

    <ImageView
        android:id="@+id/item_warning_image"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="7dp"
        android:src="@drawable/exclamationmark"/>

    <TextView
        android:id="@+id/item_warning_categories"
        android:textStyle="bold"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toEndOf="@id/item_warning_image"
        android:text="Cooling"/>

    <TextView
        android:id="@+id/item_warning_title"
        android:textStyle="bold"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/item_warning_categories"
        android:layout_toEndOf="@id/item_warning_image"
        android:text="FW Temp. After ME"/>

    <TextView
        android:id="@+id/item_warning_message"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_toEndOf="@id/item_warning_image"
        android:layout_below="@id/item_warning_title"
        android:text="Abnormal. Suhu lebih dari 90"/>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_below="@id/item_warning_message"
        android:layout_marginTop="8dp"
        android:background="@android:color/darker_gray"/>

</RelativeLayout>